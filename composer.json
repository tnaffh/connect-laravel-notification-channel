{
    "name": "tnaffh/connect-laravel-notification-channel",
    "description": "A laravel notification channel for connect",
    "keywords": [
        "tnaffh",
        "laravel",
        "connect-laravel-notification-channel"
    ],
    "homepage": "https://github.com/tnaffh/connect-laravel-notification-channel",
    "license": "MIT",
    "authors": [
        {
            "name": "Naftal Timotheus",
            "email": "tnaffh@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "spatie/laravel-package-tools": "^1.14.0",
        "illuminate/contracts": "^10.0",
        "tnaffh/connect-sms": "@dev"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.8",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^8.8",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "spatie/laravel-ray": "^1.26"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/tnaffh/connect-sms.git",
            "name": "tnaffh/connect-sms"
        }
    ],
    "autoload": {
        "psr-4": {
            "Tnaffh\\ConnectLaravelNotificationChannel\\": "src/",
            "Tnaffh\\ConnectLaravelNotificationChannel\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tnaffh\\ConnectLaravelNotificationChannel\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-connect-laravel-notification-channel --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "ConnectChannelServiceProvider"
            ],
            "aliases": {
                "ConnectLaravelNotificationChannel": "Tnaffh\\ConnectLaravelNotificationChannel\\Facades\\ConnectLaravelNotificationChannel"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
